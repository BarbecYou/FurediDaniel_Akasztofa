<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_centerVertical="true"
        android:layout_marginLeft="30dp">

        <LinearLayout
            android:id="@+id/betuLinearLayout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:orientation="horizontal">

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/minuszBtn"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:background="@drawable/buttonbackround"
                android:text="-" />

            <TextView
                android:id="@+id/tippTextView"
                android:layout_width="20dp"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="10dp"
                android:text="A"
                android:textAlignment="center"
                android:textSize="20sp" />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/pluszBtn"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:background="@drawable/buttonbackround"
                android:text="+" />
        </LinearLayout>

        <Button
            android:id="@+id/tippelBtn"
            android:layout_width="90dp"
            android:layout_height="50dp"
            android:layout_below="@id/betuLinearLayout"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="10dp"
            android:backgroundTint="#969696"
            android:text="TIPPEL" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="400dp"
        android:layout_height="match_parent"
        android:layout_centerVertical="true"
        android:layout_alignParentRight="true"
        android:layout_marginRight="30dp">

        <ImageView
            android:id="@+id/hangmanImg"
            android:layout_width="400dp"
            android:layout_height="300dp"
            android:layout_centerHorizontal="true"
            android:layout_alignParentTop="true"
            android:src="@drawable/akasztofa00" />

        <TextView
            android:id="@+id/resultTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:padding="10dp"
            android:layout_centerHorizontal="true"

            android:layout_marginBottom="20dp"
            android:text="akasztofa"
            android:textAlignment="center"
            android:textSize="40sp" />
    </RelativeLayout>


</RelativeLayout>